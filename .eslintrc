{
  "root": true,
  "extends": [
    "airbnb-base/legacy"
  ],
  "env": {
    "es6": true
  },
  "rules": {
    "default-case": "off",
    "eol-last": [
      "error",
      "always"
    ],
    "eqeqeq": "off",
    "consistent-return": "off",
    "curly": "error",
    "func-names": "off",
    "global": "off",
    "global-strict": "off",
    "guard-for-in": "off",
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": "off",
    "lines-between-class-members": "off",
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-continue": "off",
    "no-mixed-operators": "off",
    "no-multi-assign": "off",
    "no-nested-ternary": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-shadow": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "object-curly-spacing": "error",
    "one-var": "off",
    "one-var-declaration-per-line": "off",
    "quote-props": ["error", "as-needed"],
    "radix": ["error", "as-needed"],
    "strict": [
      "error",
      "never"
    ],
    "space-before-function-paren": ["error", "never"],
    "vars-on-top": "off"
  }
}